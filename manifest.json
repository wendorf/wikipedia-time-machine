{
  "manifest_version": 2,

  "name": "Wikipedia Time Machine",
  "description": "View Wikipedia content from a specific point in time",
  "version": "0.2",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "*://*.wikipedia.org/",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ]
}
